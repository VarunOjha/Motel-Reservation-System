# Local defaults (override these in K8s via ConfigMap)
GET_ROOMS_URL=http://localhost:8085/motelApi/v1/motelRooms
POST_PRICE_URL=http://localhost:8086/reservationApi/v1/priceList

PAGE_SIZE=50
DAYS_AHEAD=10

DEFAULT_ROOM_TYPE=Deluxe Suite
DEFAULT_PRICE=199.99
DEFAULT_AVAILABLE=12
DEFAULT_BOOKED=0
DEFAULT_STATUS=Active

# Optional: "Authorization: Bearer xxxx, X-Env: dev"
EXTRA_HEADERS=

HTTP_TIMEOUT_SECS=10
HTTP_MAX_RETRIES=3
HTTP_RETRY_BACKOFF_SECS=1.5

# If true, will not actually POSTâ€”just logs the intent
DRY_RUN=false
